{
    "name": "dontVisit",
    "version": "0.1",
    "description": "Disables user specified websites",
	"background": {
      "scripts": ["background.js"],
      "persistent": true
    },
	"options_page": "options.html",
	"permissions": ["*://*/", "webRequest", "webRequestBlocking", "storage"],
    "manifest_version": 2
}